<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C0C0"

    android:orientation="vertical"

    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="#FFFFFF"
        android:background="#000000"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="#FFFFFF"
        />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0C0C0"
        android:columnCount="4"
        android:padding="0dp"


        android:rowCount="5"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btn1"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:layout_column="0"
            android:textSize="30dp"
            android:background="#FFFFFF"

            android:layout_margin="1dp"
            android:layout_columnSpan="1"
            android:layout_row="0"
            android:padding="0dp"
            android:text="C" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:layout_columnSpan="1"
            android:layout_row="0"
            android:text="<--" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:layout_row="0"
            android:layout_margin="1dp"
            android:text=":" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:layout_margin="1dp"
            android:layout_row="0"
            android:text="X" />


        <Button
            android:id="@+id/btn5"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_row="1"
            android:layout_margin="1dp"
            android:text="7" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_row="1"
            android:layout_margin="1dp"
            android:text="8" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:layout_row="1"
            android:layout_margin="1dp"
            android:text="9" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:layout_row="1"
            android:layout_margin="1dp"
            android:text="-" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_row="2"
            android:layout_margin="1dp"
            android:text="4" />

        <Button
            android:id="@+id/btn10"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_row="2"
            android:layout_margin="1dp"
            android:text="5" />

        <Button
            android:id="@+id/btn11"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:layout_row="2"
            android:layout_margin="1dp"
            android:text="6" />

        <Button
            android:id="@+id/btn12"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:layout_row="2"
            android:layout_margin="1dp"
            android:text="+" />
        <Button
            android:id="@+id/btn13"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_row="3"
            android:layout_margin="1dp"
            android:text="1" />

        <Button
            android:id="@+id/btn14"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_row="3"
            android:layout_margin="1dp"
            android:text="2" />

        <Button
            android:id="@+id/btn15"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:layout_row="3"
            android:layout_margin="1dp"
            android:text="3" />

        <Button
            android:id="@+id/btn16"
            android:layout_width="95dp"
            android:layout_height="120dp"
            android:textSize="30dp"
            android:background="#FF4500"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:layout_rowSpan="2"
            android:layout_row="3"
            android:layout_margin="1dp"
            android:text="=" />

        <Button
            android:id="@+id/btn17"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_row="4"
            android:layout_margin="1dp"
            android:text="^" />

        <Button
            android:id="@+id/btn18"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_row="4"
            android:layout_margin="1dp"
            android:text="0" />

        <Button
            android:id="@+id/btn19"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:layout_row="4"
            android:layout_margin="1dp"
            android:text="." />





        />

    </GridLayout>
</LinearLayout>